
public class Calculator {

	public static void main(String[] args) {
		
		//KALKULATORS
		
		double num1 = 3;
		double num2 = 24.5;
		char c = '-';
		
		if (c=='+'){
			System.out.println(""+num1 + c +num2+" = " +(num1 + num2));
		}else if (c=='-'){
			System.out.println(""+num1 + c +num2+" = " +(num1 - num2));
		}else if (c=='*'){
			System.out.println(""+num1 + c +num2+" = " +(num1 * num2));
		}else if (c=='/'){
			System.out.println(""+num1 + c +num2+" = " +(num1 / num2));
		}else if (c=='%'){
			System.out.println(""+num1 + c +num2+" = " +(num1 % num2));
		}else
			System.out.println("Wrong data");

	}

}
